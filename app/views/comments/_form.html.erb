<%= form_for @comment do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :fullname %><br />
    <%= f.text_field :fullname %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :commentable_id %><br />
    <%= f.text_field :commentable_id %>
  </p>
  <p>
    <%= f.label :commentable_type %><br />
    <%= f.text_field :commentable_type %>
  </p>
  <p><%= f.submit %></p>
<% end %>
