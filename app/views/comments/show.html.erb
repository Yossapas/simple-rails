<% title "Comment" %>

<p>
  <strong>Fullname:</strong>
  <%= @comment.fullname %>
</p>
<p>
  <strong>Email:</strong>
  <%= @comment.email %>
</p>
<p>
  <strong>Body:</strong>
  <%= @comment.body %>
</p>
<p>
  <strong>Commentable:</strong>
  <%= @comment.commentable_id %>
